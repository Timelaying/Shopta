# Frontend Dockerfile for Next.js application
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN cd shopping-taxi-app && npx next build

FROM node:18-alpine
WORKDIR /app
COPY --from=builder /app ./
WORKDIR /app/shopping-taxi-app
EXPOSE 3000
CMD ["npx", "next", "start"]
